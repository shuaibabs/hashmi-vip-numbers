rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin by reading their role from their user document.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can create, read, and update their OWN user document.
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
      // Admins can get a list of all users.
      allow list: if request.auth != null && isAdmin();
    }

    // For all other collections, any authenticated user can perform any action.
    // In a real production app, these would be much more restrictive.
    match /numbers/{docId} {
      allow read, create, update, delete: if request.auth != null;
    }
    match /sales/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /portouts/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /reminders/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /activities/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /dealerPurchases/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
  }
}
