rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin by reading their role from their user document.
    function isAdmin() {
      // Important: This requires that the admin making the request already has their 'admin' role
      // set in their own user document.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rule for the 'users' collection
    match /users/{userId} {
      // A user can read or update their own document.
      // A user can create their own document (e.g., on first sign-up).
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
      
      // An admin can get a list of all users.
      allow list: if request.auth != null && isAdmin();
    }

    // Rules for all other collections.
    // Any authenticated user can perform any action.
    // For a real production app, you would want more granular rules here.
    match /numbers/{docId} {
      allow read, create, update, delete: if request.auth != null;
    }
    match /sales/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /portouts/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /reminders/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /activities/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /dealerPurchases/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
  }
}
