
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin.
    // It safely checks for the existence of the user document and their role.
    function isAdmin() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && userDoc.data.role == 'admin';
    }

    // Rule for the 'users' collection
    match /users/{userId} {
      // Admins can create any user document.
      // A user can create their own document.
      allow create: if (request.auth != null && isAdmin()) || (request.auth != null && request.auth.uid == userId);

      // A user can update their own document.
      // An admin can update any user document.
      allow update: if (request.auth != null && request.auth.uid == userId) || (request.auth != null && isAdmin());
      
      // Any authenticated user can read any user's document.
      // This is necessary for the isAdmin function to work and for admins to see user lists.
      allow read: if request.auth != null;
      
      // An admin can get a list of all users.
      allow list: if request.auth != null && isAdmin();
    }

    // Rules for all other collections.
    // Any authenticated user can perform any action.
    // For a real production app, you would want more granular rules here.
    match /numbers/{docId} {
      allow read, create, update, delete: if request.auth != null;
    }
    match /sales/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /portouts/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /reminders/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /activities/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
    match /dealerPurchases/{docId} {
       allow read, create, update, delete: if request.auth != null;
    }
  }
}
